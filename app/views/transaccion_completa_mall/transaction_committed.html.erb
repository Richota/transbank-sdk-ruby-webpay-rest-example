<h1>Ejemplo Transaccion Completa Mall Transacciòn confirmada</h1>

<h2>Request</h2>
<%= @req %>

<h2>Response</h2>
<%= @resp.inspect %>

<h1>Obtener status de la transacción</h1>
<form class="transaccion_completa_form" action="/transaccion_completa/mall/status/<%= @req['token'] %>" method="get" style="display: flex; flex-direction:column; width:50%;font-size: 20px;">

  <button type="submit">Consultar estado</button>
</form>

<h1>Reembolso de la transacción</h1>
<form class="transaccion_completa_form" action="/transaccion_completa/mall/refund" method="post" style="display: flex; flex-direction:column; width:50%;font-size: 20px;">

  <label for="token">Token</label>
  <input name="token" id="token" value="<%= @req['token'] %>">

  <label for="child_commerce_code">Codigo de comercio (hijo)</label>
  <input disabled name="child_commerce_code" value="<%= @req['child_commerce_code'] %>">

  <label for="child_buy_order">Codigo de comercio (hijo)</label>
  <input disabled name="child_buy_order" value="<%= @req['child_buy_order'] %>">

  <label for="amount">Monto</label>
  <input name="amount" id="amount" value="<%= @resp.amount %>">


  <button type="submit">Solicitar reembolso</button>
</form>